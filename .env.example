# Application
APP_NAME=zapdos
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Public API
PUBLIC_API_BASE_URL=https://public.com/api
PUBLIC_API_TOKEN=your_api_token_here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zapdos_dev
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Monitoring
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3000

# Trading
PAPER_TRADING=true
MAX_POSITION_SIZE=10000
DAILY_LOSS_LIMIT=1000
